doctype html
html(lang='zh-TW' class="page-#{currentPage}")
  head
    - var info = getData('info')
    block head
      include ./shared/_head
    block title
      - var star = env == 'dev' ? 'â˜…': ''
      title #{star}#{info.site.title}
    block keywords
      meta(name='keywords' content=info.site.keywords)
    block description
      meta(name='description' content=info.site.description)
    block og
      include ./shared/_og
  body
    include /mixin/_icon
    include /partials/_nav
    if isArchive
      include ./shared/_svg-sprites
    .wrapper
      if page_name
        p= page_name
      block content
    block foot
      include ./shared/_foot
