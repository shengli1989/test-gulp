gulp = require 'gulp'
$ = require('gulp-load-plugins')()

basePath =
  src: 'src/'
  dest: 'build/'

src =
  sass: "#{basePath.src}sass/"
  scripts: "#{basePath.src}scripts/"
  page: "#{basePath.src}jade/pages/"

dest =
  style: "#{basePath.dest}assets/stylesheets/"
  scripts: "#{basePath.dest}assets/javascripts/"
  page: "#{basePath.dest}"

module.exports = { gulp, $, basePath, src, dest }
