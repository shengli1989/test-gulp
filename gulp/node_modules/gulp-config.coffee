gulp = require 'gulp'
$ = require('gulp-load-plugins')()
fs = require 'fs'
yaml = require 'js-yaml'

basePath =
  root: global.process.env.PWD
  src: 'src/'
  dest: 'build/'
  config: 'config/'

src =
  styles: "#{basePath.src}sass/"
  scripts: "#{basePath.src}scripts/"
  sketch: "#{basePath.src}sketch/"
  pages: "#{basePath.src}jade/pages/"
  images: "#{basePath.src}images/"

dest =
  styles: "#{basePath.dest}assets/stylesheets/"
  scripts: "#{basePath.dest}assets/javascripts/"
  images: "#{basePath.dest}assets/images/"
  pages: "#{basePath.dest}"

readConfig = (fileName) -> yaml.safeLoad(fs.readFileSync("#{basePath.config}#{fileName}.yml", 'utf-8'))

module.exports = { gulp, $, basePath, src, dest, readConfig }
