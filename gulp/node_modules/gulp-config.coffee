gulp = require 'gulp'
$ = require('gulp-load-plugins')()
fs = require 'fs'
yaml = require 'js-yaml'

basePath =
  src: 'src/'
  dest: 'build/'

src =
  styles: "#{basePath.src}sass/"
  scripts: "#{basePath.src}scripts/"
  pages: "#{basePath.src}jade/pages/"

dest =
  styles: "#{basePath.dest}assets/stylesheets/"
  scripts: "#{basePath.dest}assets/javascripts/"
  pages: "#{basePath.dest}"

readYaml = (fileName) -> yaml.safeLoad(fs.readFileSync("#{basePath.src}#{fileName}.yml", 'utf-8'))

data = readYaml('data')
sharedConfig = readYaml('shared-config')

module.exports = { gulp, $, basePath, src, dest, data, sharedConfig }
